<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_navigation_drawer"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/text_profile_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_profile_view_email"
        android:layout_alignLeft="@+id/profile_image"
        android:layout_alignStart="@+id/profile_image"
        android:paddingBottom="4dp"
        tools:text="JoÃ£o das Neves"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_profile_view_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_profile_view_name"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/text_profile_view_name"
        android:layout_marginBottom="8dp"
        tools:text="joao.das.neves@got.com"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small" />

</RelativeLayout>